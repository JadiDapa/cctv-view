generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  ADMIN
  GUEST
}

model User {
  id        String   @id @default(uuid())
  name      String
  role      Role     @default(GUEST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Camera {
  id        String       @id @default(uuid())
  title     String
  url       String
  status    CameraStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum CameraStatus {
  ACTIVE
  INACTIVE
}
