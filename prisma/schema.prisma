generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  ADMIN
  USER
}

enum DocumentType {
  PROCEDURE
  REGULATION
  ANNOUCEMENT
  REPORTS
  OTHER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Section {
  id          String   @id @default(uuid())
  name        String
  description String?
  cameras     Camera[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Camera {
  id          String   @id @default(uuid())
  name        String
  description String?
  sectionId   String
  section     Section  @relation(fields: [sectionId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
